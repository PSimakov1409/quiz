<h1>Список вопросов</h1>

<table>
  <thead>
    <tr>
      <th>Вопрос</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= link_to 'Показать', question %></td>
        <td><%= link_to 'Изменить', edit_question_path(question) %></td>
        <td><%= link_to 'Удалить', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый вопрос', new_question_path %>
<%= link_to 'Перейти в ответы', answers_path %>
