<h1>Ответы викторины</h1>

<table>
  <thead>
    <tr>
      <th>Ответы</th>
      <th>Вопросы</th>
      <th>Правильность</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
            <td><%= answer.question.content %></td>
            <td><%= answer.is_correct %></td>
        <td><%= link_to 'Показать', answer %></td>
        <td><%= link_to 'Изменить', edit_answer_path(answer) %></td>
        <td><%= link_to 'Удалить', answer, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый ответ', new_answer_path %>
